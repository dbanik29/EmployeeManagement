@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}
    <div class="card-deck">
        @foreach (var employee in Model)
        {
            var imagePath = "~/images/" + (employee.PhotoFile ?? "imge.png");
            @*<div class="card m-3" style="min-width: 18rem; max-width:30.5%;" >*@
            <div class="card m-3" style="min-width: 13rem; max-width:30.5%;" >
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageSize" src="@imagePath"
                 asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
        }
        </div>

